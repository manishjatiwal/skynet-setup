#!/bin/bash

# Requirements
# Install feh
# Have a wallpapers directory to pick wallpaper from

WALLPAPER_DIR="/home/jatiwal/Documents/Wallpapers"
DELAY="300s" # Change wallpaper every 5 minutes

# Infinite loop to change wallpaper
while true; do
  feh --randomize --bg-scale "$WALLPAPER_DIR"/*
  sleep $DELAY
done

